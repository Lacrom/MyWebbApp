@page
@model MyWebbApp.Pages.Admin_Pages.IndexModel

@{
    ViewData["Title"] = "Admin Index";
}

<h1>Index</h1>

<div>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.My_Projects_Model[0].ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.My_Projects_Model[0].Technology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.My_Projects_Model[0].Timeofwork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.My_Projects_Model[0].Delineation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.My_Projects_Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technology)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timeofwork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delineation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
<p>
    <a asp-page="Create_Account">Create New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].UserNick)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].UserPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Echelon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserNick)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Echelon)
            </td>
            <td>
                <a asp-page="./Edit_Account" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details_Account" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete_Account" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
